<div class="login-wrapper" style="padding-top:50px">
    <h1>Login</h1>
    <%= flash[:errors] %>
    <%= form_tag login_index_path do%>
    <p><%= label_tag :username %>
        <%= text_field_tag :username %></p>

    <p><%= label_tag :password %>
        <%= password_field_tag :password %></p>

    <p><%= submit_tag "Login" %></p>
<% end  %>
</div>
